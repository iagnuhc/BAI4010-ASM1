<h1>Get in Touch</h1>  
<form id="subscribe-form">  
    <label for="user-name">Name (Required):</label>  
    <input type="text" id="user-name" name="user-name" required aria-required="true">  
      
    <label for="user-email">Email (Required):</label>  
    <input type="email" id="user-email" name="user-email" required aria-required="true">  
      
    <button type="submit">Subscribe</button>  
</form>  
  
<script>  
    document.getElementById('subscribe-form').onsubmit = (e) => {  
        e.preventDefault();  
        alert("Thank you for subscribing!");  
        e.target.reset();  
    };  
</script>  
